<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/navbar.ejs") %>
    
    <div class="container mt-5">
        <hr>
        <h1 class="text-center mb-4">Produtos</h1>
        <hr>
        <div class="text-center mb-4">
            <a href="/addproduto" class="btn btn-primary btn-lg">Adicionar Produto</a>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% addproduto.forEach(function(p) { %>
                <div class="col">
                    <div class="card shadow-sm border-light" style="height: 600px;">
                        <img src="<%= p.url %>" class="card-img-top" alt="<%= p.nome %>" style="object-fit: cover; height: 450px;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= p.nome %></h5>
                            <p class="card-text">Pre√ßo: R$ <%= p.preco %></p>
                            <div class="mt-auto text-center">
                                <a href="/verproduto/<%= p.id %>" class="btn btn-primary">Ver Produto</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <%- include("partials/footer.ejs") %>
</body>
